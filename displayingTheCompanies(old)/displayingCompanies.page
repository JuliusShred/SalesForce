<apex:page controller="CompaniesDisplayerController">  
	<apex:pageBlock>
		<apex:pageBlockTable value="{!comWrapperList}" var="item">
				<apex:column headerValue="Description">
            		<apex:outputText value="{!item.rowDescription}"/>
                </apex:column>
                <apex:column headerValue="Company 1">
                    <apex:outputText value="{!item.company1}"/>        
                </apex:column>
                <apex:column headerValue="Company 2">
                    <apex:outputText value="{!item.company2}"/>
                </apex:column>
        </apex:pageBlockTable>
	</apex:pageBlock>
</apex:page>